@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Verification";
}

<section class="rounded-md bg-white px-6 py-3 mx-auto shadow-md max-w-screen-sm space-y-4">
    <h1 class="font-rockwell text-dark text-xl font-bold">@ViewData["Title"]</h1>
    <hr class="h-[2px] rounded bg-mid border-0" />
    <p class="font-lato text-zinc-700">
        You have requested to log in with a recovery code. This login will not be remembered until you provide
        an authenticator app code at log in or disable 2FA and log in again.
    </p>

    <form method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
        <div class="flex flex-col gap-2">
            <label asp-for="Input.RecoveryCode" class="font-lato text-zinc-700 text-sm font-bold"></label>
            <input asp-for="Input.RecoveryCode" autocomplete="off" />
            <span asp-validation-for="Input.RecoveryCode" class="error"></span>
        </div>
        
        <div class="flex justify-end gap-2">
            <button type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-success font-lato hover:bg-opacity-80 transition-opacity">Log In</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}