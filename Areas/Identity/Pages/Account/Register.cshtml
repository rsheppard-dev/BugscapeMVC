@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="font-rockwell text-xl font-bold mb-4">@ViewData["Title"]</h1>


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.FirstName"></label>
        <input asp-for="Input.FirstName" autocomplete="first-name" aria-required="true"
            required />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.LastName"></label>
        <input asp-for="Input.LastName" autocomplete="last-name"
            aria-required="true" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.CompanyName"></label>
        <input asp-for="Input.CompanyName" autocomplete="last-name"
            aria-required="true" />
        <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" autocomplete="new-password"
            aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" autocomplete="new-password"
            aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="flex justify-end">
        <button id="registerSubmit" type="submit" class="font-lato px-4 py-2 rounded-md text-sm bg-success hover:bg-opacity-80 transition-opacity">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}