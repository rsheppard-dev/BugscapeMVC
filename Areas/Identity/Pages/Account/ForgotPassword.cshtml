@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

<section class="rounded-md bg-white px-6 py-3 mx-auto shadow-md max-w-screen-sm space-y-4">
    <h1 class="font-rockwell text-dark text-xl font-bold">@ViewData["Title"]</h1>

    <hr class="h-[2px] rounded bg-mid border-0" />

    <form id="account" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
        <div class="flex flex-col gap-2">
            <label asp-for="Input.Email" class="font-lato text-zinc-700 text-sm font-bold"></label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="error"></span>
        </div>
        
        <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-warning font-lato hover:bg-opacity-80 transition-opacity">Reset Password</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
