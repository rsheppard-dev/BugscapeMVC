@page
@model IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2 class="font-rockwell text-dark text-xl font-bold mb-4">@ViewData["Title"]</h2>
<partial name="../_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" class="space-y-4 max-w-xl">
    <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
    
    <div class="flex flex-col gap-2">
        <label asp-for="Username" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Username" class="font-lato text-sm disabled:bg-gray-200" disabled />
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.FirstName" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.FirstName" class="font-lato text-sm" placeholder="Please enter your phone number."/>
        <span asp-validation-for="Input.FirstName" class="error"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.LastName" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.LastName" class="font-lato text-sm" placeholder="Please enter your phone number."/>
        <span asp-validation-for="Input.LastName" class="error"></span>
    </div>
    <div class="flex flex-col gap-2">
        <label asp-for="Input.PhoneNumber" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.PhoneNumber" class="font-lato text-sm" placeholder="Please enter your phone number."/>
        <span asp-validation-for="Input.PhoneNumber" class="error"></span>
    </div>
    <div class="flex justify-end">
        <button id="update-profile-button" type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-success font-lato hover:bg-opacity-80 transition-opacity">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
