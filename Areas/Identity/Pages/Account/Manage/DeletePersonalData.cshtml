@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 class="font-rockwell text-dark text-xl font-bold mb-4">@ViewData["Title"]</h2>

<div class="border border-danger bg-danger bg-opacity-20 max-w-xl space-y-4 font-lato px-6 py-3 mb-4" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-danger float-left mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <strong class="text-dark font-bold">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
</div>

<form id="delete-user" method="post" class="space-y-4 max-w-xl">
    <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
    @if (Model.RequirePassword)
    {
        <div class="flex flex-col gap-2">
            <label asp-for="Input.Password" class="font-lato text-zinc-700 font-bold text-sm"></label>
            <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
            <span asp-validation-for="Input.Password" class="error"></span>
        </div>
    }
    <div class="flex justify-end">
        <button type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-danger text-white font-bold font-lato hover:bg-opacity-80 transition-opacity">Delete my data and close my account</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
