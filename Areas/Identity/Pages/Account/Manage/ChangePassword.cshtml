@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="font-rockwell text-dark text-xl font-bold mb-4">@ViewData["Title"]</h2>
<partial name="../_StatusMessage" for="StatusMessage" />

<form id="email-form" method="post" class="space-y-4 max-w-xl">
    <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>

    <div class="flex flex-col gap-2">
        <label asp-for="Input.OldPassword" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.OldPassword" class="font-lato text-sm w-full pr-10" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
        <span asp-validation-for="Input.OldPassword" class="error" role="alert"></span>
    </div>

    <div class="flex flex-col gap-2">
        <label asp-for="Input.NewPassword" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.NewPassword" class="font-lato text-sm w-full pr-10" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
        <span asp-validation-for="Input.NewPassword" class="error" role="alert">
        </span>
    </div>

    <div class="flex flex-col gap-2">
        <label asp-for="Input.ConfirmPassword" class="font-lato text-zinc-700 font-bold text-sm"></label>
        <input asp-for="Input.ConfirmPassword" class="font-lato text-sm w-full pr-10"  autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." ConfirmPassword/>
        <span asp-validation-for="Input.ConfirmPassword" class="error" role="alert"></span>
    </div>

    <div class="flex justify-end">
        <button type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-success font-lato hover:bg-opacity-80 transition-opacity">Update Password</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
