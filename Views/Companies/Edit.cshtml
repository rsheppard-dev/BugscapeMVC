@model BugscapeMVC.Models.Company

@{
    ViewData["Title"] = "Edit Company Details";
}

<head>
    <script src="/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
</head>

<h1 class="font-rockwell text-dark text-xl font-bold mb-4">@ViewData["Title"]</h1>
<hr class="mb-4 h-[2px] rounded bg-mid border-0" />

<form asp-action="Edit" method="post" class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
    <div asp-validation-summary="ModelOnly" class="text-danger text-sm font-lato font-bold"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="LogoFileName" />
    <input type="hidden" asp-for="LogoContentType" />
    <input type="hidden" asp-for="LogoFileData" />
    
    <div class="flex flex-col lg:col-span-2 gap-2">
        <label asp-for="Name" class="font-lato text-sm font-bold"></label>
        <input asp-for="Name" class="font-lato text-sm" />
        <span asp-validation-for="Name" class="text-danger text-sm font-lato font-bold"></span>
    </div>

    <div class="flex flex-col lg:col-span-2 gap-2">
        <label asp-for="Description" class="font-lato text-sm font-bold"></label>
        <textarea asp-for="Description" data-tinymce class="font-lato text-sm" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger text-sm font-lato font-bold"></span>
    </div>

    <div class="lg:col-span-2 flex justify-end">
        <button type="submit" class="px-4 py-2 text-sm rounded-md cursor-pointer bg-success font-lato hover:bg-opacity-80 transition-opacity">Update
            Company
        </button>
    </div>
</form>

<script>
    tinymce.init({
        selector: '[data-tinymce]',
        menubar: false,
        statusbar: false,
        height: 200
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
