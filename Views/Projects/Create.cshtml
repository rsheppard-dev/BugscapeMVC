@model BugscapeMVC.Models.ViewModels.AddProjectWithPMViewModel
@using BugscapeMVC.Services.Interfaces
@using BugscapeMVC.Models.Enums

@inject IFileService fileService

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.Name" class="control-label"></label>
                <input asp-for="Project.Name" class="form-control" />
                <span asp-validation-for="Project.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Description" class="control-label"></label>
                <input asp-for="Project.Description" class="form-control" />
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.StartDate" class="control-label"></label>
                <input asp-for="Project.StartDate" class="form-control" />
                <span asp-validation-for="Project.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.EndDate" class="control-label"></label>
                <input asp-for="Project.EndDate" class="form-control" />
                <span asp-validation-for="Project.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Project Priority</label>
                <select asp-for="Project.ProjectPriorityId" class ="form-control" asp-items="@Model.PriorityList">
                    <option disabled selected hidden>Choose Priority</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Project Image</label>
                <input data-image-input asp-for="Project.ImageFormFile" class="form-control" type="file" accept="image/jpg, image/jpeg, image/png, image/webp, image/gif" />
                <span asp-validation-for="Project.ImageFormFile" class="text-danger"></span>
            </div>
            <div>
                <label>Image Preview</label>
                    <img data-image-output class="img-fluid img-thumbnail" src="~/images/default_project.png">
            </div>
            @if (User.IsInRole(Roles.Admin.ToString()))
            {
            <div class="form-group">
                <label class="control-label">Project Manager</label>
                <select asp-for="PmId" class="form-control" asp-items="@Model.PMList">
                    <option disabled selected hidden>Assign Project Manager</option>
                </select>
            </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script  src="~/js/imagePreview.js"></script>
    <script>
        const input = document.querySelector('[data-image-input]');
        const output = document.querySelector('[data-image-output]');
        const instance = new ImagePreview(input, output);

        instance.init();
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
