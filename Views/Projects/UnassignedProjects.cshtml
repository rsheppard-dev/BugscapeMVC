@model IEnumerable<BugscapeMVC.Models.Project>
@using Microsoft.AspNetCore.Identity
@using BugscapeMVC.Services.Interfaces
@using BugscapeMVC.Models.Enums

@inject IFileService FileService
@inject IProjectService ProjectService
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Unassigned Projects";

    AppUser? user = await UserManager.GetUserAsync(User);

    Pagination pagination = new();

    int pageNumber = 0;

    if (ViewBag.Pagination is not null)
    {
        pagination = ViewBag.Pagination;
        pageNumber = pagination.CurrentPage;
    }

    string? search = ViewBag.Search;
    string? sortBy = ViewBag.Sort.sortBy;
    string order = ViewBag.Sort.order ?? "asc";
    int limit = ViewBag.Sort.limit ?? 10;


    string GetNewOrder(string column)
    {
        if (sortBy == column)
        {
            return order == "asc" ? "desc" : "asc";
        }

        return "asc";
    }
}

<div class="flex items-center justify-between mb-4">
    <h1 class="font-rockwell text-dark text-xl font-bold">@ViewData["Title"]</h1>
</div>

<form asp-action="UnassignedProjects" asp-controller="Projects" method="get" class="flex justify-end mb-4">
    <div class="relative">
        <input type="search" name="search" class="text-lato text-sm bg-white rounded-lg px-4 py-2 border-gray-200 pl-10 placeholder:text-gray-400" placeholder="Search projects...">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 absolute top-2 left-2 stroke-dark">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
    </div>
</form>

<section class="grid grid-cols-12">
    @if (Model.Count() == 0)
    {
        <p class="font-lato col-span-12">There are currently no projects to show.</p>
    }
    else
    {        
    <div class="relative col-span-12 overflow-x-auto rounded-t-lg scrollbar-thin scrollbar-thumb-light scrollbar-track-lightest mb-4">
        <table id="projectTable" class="w-full text-sm text-left text-dark font-lato">
            <thead class="text-xs bg-light uppercase">
                <tr>
                    <th data-sort="Name" scope="col" class="px-6 py-3 whitespace-nowrap">
                        <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.CurrentPage" asp-route-sortBy="name" asp-route-limit="@limit" asp-route-order="@GetNewOrder("name")" asp-route-search="@search" class="flex items-center gap-2">
                            <span>Name</span>
                            @if (sortBy == "name")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 @(order == "asc" ? "rotate-180" : "rotate-none")">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                                </svg>
                            }
                        </a>
                    </th>
                    <th data-sort="StartDate" scope="col" class="px-6 py-3 whitespace-nowrap">
                        <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.CurrentPage" asp-route-sortBy="startdate" asp-route-limit="@limit" asp-route-order="@GetNewOrder("startdate")" asp-route-search="@search" class="flex items-center gap-2">
                        <span>Started</span>
                            @if (sortBy == "startdate")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 @(order == "asc" ? "rotate-180" : "rotate-none")">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                                </svg>
                            }
                        </a>
                    </th>
                    <th data-sort="EndDate" scope="col" class="px-6 py-3 whitespace-nowrap">
                        <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.CurrentPage" asp-route-sortBy="enddate" asp-route-limit="@limit" asp-route-order="@GetNewOrder("enddate")" asp-route-search="@search" class="flex items-center gap-2">
                        <span>Due</span>
                            @if (sortBy == "enddate")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 @(order == "asc" ? "rotate-180" : "rotate-none")">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                                </svg>
                            }
                        </a>
                    </th>
                    <th data-sort="ProjectManagers" scope="col" class="px-6 py-3 whitespace-nowrap">
                        <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.CurrentPage" asp-route-sortBy="pm" asp-route-limit="@limit" asp-route-order="@GetNewOrder("pm")" asp-route-search="@search" class="flex items-center gap-2">
                        <span>PM</span>
                        @if (sortBy == "pm")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 @(order == "asc" ? "rotate-180" : "rotate-none")">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                                </svg>
                            }
                        </a>
                    </th>
                    <th data-sort="Priority" scope="col" class="px-6 py-3 whitespace-nowrap">
                        <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.CurrentPage" asp-route-sortBy="priority" asp-route-limit="@limit" asp-route-order="@GetNewOrder("priority")" asp-route-search="@search" class="flex items-center gap-2">
                        <span>Priority</span>
                            @if (sortBy == "priority")
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 @(order == "asc" ? "rotate-180" : "rotate-none")">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                                </svg>
                            }
                        </a>
                    </th>
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowNumber = 0;
                }

                @foreach (Project project in Model)
                {
                    AppUser? projectManager = await ProjectService.GetProjectManagerAsync(project.Id);
                    string rowColor = rowNumber % 2 == 0 ? "bg-lightest" : "bg-mid"; // Define row colors based on the counter.
                    rowNumber++;
                
                <tr class="@rowColor border-b">
                    <th scope="row" class="px-6 py-4 whitespace-nowrap">
                        @project.Name
                    </th>
                    <td class="px-6 py-4">
                        @project.StartDate.ToString("dd.MM.yyyy")
                    </td>
                    <td class="px-6 py-4">
                        @project.EndDate.ToString("dd.MM.yyyy")
                    </td>
                    <td class="px-6 py-4">
                        @if (projectManager is null)
                        {
                            <span class="bg-gray-200 text-dark uppercase px-2 py-1 rounded-md text-xs font-bold">Unassigned</span>
                        }
                        else
                        {
                            @if (projectManager?.AvatarFileData is null || projectManager?.AvatarContentType is null)
                            {
                                <img class="h-8 w-8 object-cover rounded-full" src="~/images/default-avatar.png" alt="@projectManager?.FullName">
                            }
                            else
                            {
                                <img class="h-8 w-8 object-cover rounded-full" src="@FileService.ConvertByteArrayToFile(projectManager.AvatarFileData, projectManager.AvatarContentType)" alt="@projectManager?.FullName">
                            }
                        }
                    </td>
                    <td class="px-6 py-4">
                        @{
                            string badgeClass = "bg-danger";

                            switch (project.ProjectPriority?.Name)
                            {
                                case nameof(Priorities.Urgent):
                                    badgeClass = "bg-danger";
                                    break;
                                case nameof(Priorities.High):
                                    badgeClass = "bg-warning";
                                    break;
                                case nameof(Priorities.Medium):
                                    badgeClass = "bg-info";
                                    break;
                                default:
                                    badgeClass = "bg-success";
                                    break;
                            }
                        }
                        <span class="uppercase px-2 py-1 @badgeClass rounded-md text-xs font-bold">@project.ProjectPriority?.Name</span>
                    </td>
                    <td class="px-6 py-4 flex items-center gap-2">
                        <a asp-action="Details" asp-controller="Projects" title="Project Details" asp-route-id="@project.Id" class="hover:scale-110 transition-transform">
                            <svg xmlns="http://www.w3.org/2000/svg" title="Project Details" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </a>

                        @{
                            bool isProjectPM = (await ProjectService.GetProjectManagerAsync(project.Id))?.Id == user?.Id;
                        }

                        @if(User.IsInRole(nameof(Roles.Admin)) || isProjectPM)
                        {
                            <a asp-action="AssignPM" asp-route-id="@project.Id" title="Assign PM" class="bg-info text-white uppercase px-2 py-1 rounded-md text-xs font-bold hover:bg-opacity-80 transition-opacity">
                                Assign PM
                            </a>
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    @if (pagination.TotalPages > 0)
    {
        <div class="flex items-center justify-center gap-2 col-span-12">
 
            <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="1" asp-route-sortBy="@sortBy" asp-route-order="@order" asp-route-limit="@limit" asp-route-search="@search" class="@(pagination.CurrentPage > 1 ? "hover:bg-info hover:bg-opacity-80" : "opacity-60 cursor-default") h-8 w-8 flex items-center justify-center text-dark rounded-md font-lato transition-colors bg-gray-200">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18.75 19.5l-7.5-7.5 7.5-7.5m-6 15L5.25 12l7.5-7.5" />
                </svg>
            </a>
            <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@(pagination.CurrentPage - 1)" asp-route-sortBy="@sortBy" asp-route-order="@order" asp-route-limit="@limit" asp-route-search="@search" class="@(pagination.CurrentPage > 1 ? "hover:bg-info hover:bg-opacity-80" : "opacity-60 cursor-default") h-8 w-8 flex items-center justify-center text-dark rounded-md font-lato transition-colors bg-gray-200">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                </svg>
            </a>

            @for (int p = pagination.StartPage; p <= pagination.EndPage; p++)
            {
                <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@p" asp-route-sortBy="@sortBy" asp-route-order="@order" asp-route-limit="@limit" asp-route-search="@search" class="h-8 w-8 flex text-sm items-center justify-center text-dark rounded-md font-lato transition-colors @(pagination.CurrentPage == p ? "bg-info cursor-default" : "bg-gray-200 hover:bg-info hover:bg-opacity-80")">
                    @p
                </a>
            }

            <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@(pagination.CurrentPage != pagination.TotalPages ? pagination.CurrentPage + 1 : pagination.TotalPages)" asp-route-sortBy="@sortBy" asp-route-order="@order" asp-route-limit="@limit" asp-route-search="@search" class="@(pagination.CurrentPage != pagination.TotalPages ? "hover:bg-info hover:bg-opacity-80" : "opacity-60 cursor-default") h-8 w-8 flex items-center justify-center text-dark rounded-md font-lato transition-colors bg-gray-200">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
            </a>
            <a asp-action="UnassignedProjects" asp-controller="Projects" asp-route-page="@pagination.TotalPages" asp-route-sortBy="@sortBy" asp-route-order="@order" asp-route-limit="@limit" asp-route-search="@search" class="@(pagination.CurrentPage != pagination.TotalPages ? "hover:bg-info hover:bg-opacity-80" : "opacity-60 cursor-default") h-8 w-8 flex items-center justify-center text-dark rounded-md font-lato transition-colors bg-gray-200">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 4.5l7.5 7.5-7.5 7.5m-6-15l7.5 7.5-7.5 7.5" />
                </svg>
            </a>
        </div>
    }
}
</section>