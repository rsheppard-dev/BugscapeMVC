@model IEnumerable<BugscapeMVC.Models.Ticket>

@using BugscapeMVC.Services.Interfaces
@using BugscapeMVC.Models.Enums

@inject IFileService FileService
    
<table class="w-full text-sm text-left text-dark font-lato">
    <thead class="text-xs bg-light uppercase">
        <tr>
            <th scope="col">
                <button type="button" data-sort="title" data-order="asc" data-sortable="true" class="text-xs uppercase px-6 py-3 whitespace-nowrap">Title</button>
            </th>
            <th scope="col">
                <button type="button" data-sort="developer" data-order="asc" data-sortable="true" class="text-xs uppercase px-6 py-3 whitespace-nowrap">Developer</button>
            </th>
            <th scope="col">
                <button type="button" data-sort="status" data-order="asc" data-sortable="true" class="text-xs uppercase px-6 py-3 whitespace-nowrap">Status</button>
            </th>
            <th scope="col">
                <button type="button" data-sort="priority" data-order="asc" data-sortable="true" class="text-xs uppercase px-6 py-3 whitespace-nowrap">Priority</button>
            </th>
            <th scope="col">
                <button type="button" data-sort="date" data-order="asc" data-sortable="true" class="text-xs uppercase px-6 py-3 whitespace-nowrap">Date</button>
            </th>
            <th scope="col" class="px-6 py-3 whitespace-nowrap">
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int rowNumber = 0;
        }

        @foreach (Ticket ticket in Model)
        {
            string rowColor = rowNumber % 2 == 0 ? "bg-lightest" : "bg-mid"; // Define row colors based on the counter.
            rowNumber++;
        
        <tr class="@rowColor border-b">
            <th scope="row" class="px-6 py-4 whitespace-nowrap">
                @ticket.Title
            </th>
            <td class="px-6 py-4 whitespace-nowrap">
                @if (ticket.DeveloperUser is null)
                {
                    <span class="bg-gray-200 text-dark uppercase px-2 py-1 rounded-md text-xs font-bold">Unassigned</span>
                }
                else
                {
                    @if (ticket.DeveloperUser?.AvatarFileData is null || ticket.DeveloperUser?.AvatarContentType is null)
                    {
                        <img class="h-8 w-8 object-cover rounded-full" src="~/images/default-avatar.png" alt="@ticket.DeveloperUser?.FullName">
                    }
                    else
                    {
                        <img class="h-8 w-8 object-cover rounded-full" src="@FileService.ConvertByteArrayToFile(ticket.DeveloperUser.AvatarFileData, ticket.DeveloperUser.AvatarContentType)" alt="@ticket.DeveloperUser?.FullName">
                    }
                }
            </td>
            <td class="px-6 py-4">
                <span class="bg-dark text-white uppercase px-2 py-1 rounded-md text-xs font-bold">@ticket.TicketStatus?.Name</span>
            </td>
            <td class="px-6 py-4">
                @{
                    string badgeClass = "bg-danger";

                    switch (ticket.TicketPriority?.Name)
                    {
                        case nameof(Priorities.Urgent):
                            badgeClass = "bg-danger";
                            break;
                        case nameof(Priorities.High):
                            badgeClass = "bg-warning";
                            break;
                        case nameof(Priorities.Medium):
                            badgeClass = "bg-info";
                            break;
                        default:
                            badgeClass = "bg-success";
                            break;
                    }
                }
                <span class="uppercase px-2 py-1 @badgeClass rounded-md text-xs font-bold">@ticket.TicketPriority?.Name</span>
            </td>
            <td class="px-6 py-4">
                <span>@ticket.Created.ToString("dd.MM.yyyy")</span>
            </td>
            <td class="px-6 py-4">
                <a asp-action="Details" asp-controller="Tickets" title="Ticket Details" asp-route-id="@ticket.Id" class="block">
                    <svg xmlns="http://www.w3.org/2000/svg" title="Ticket Details" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:scale-110 transition-transform">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>