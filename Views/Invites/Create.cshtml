@model BugscapeMVC.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<head>
    <script src="/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
</head>

<h1 class="font-rockwell text-xl mb-4 text-dark">Invite New Member</h1>

<hr class="mb-4 h-[2px] rounded bg-mid border-0" />

<form asp-action="Create" class="flex flex-col gap-4 text-dark font-lato">
    <div asp-validation-summary="ModelOnly" class="error"></div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="InviteeEmail" class="text-sm font-bold"></label>
        <input asp-for="InviteeEmail" />
        <span asp-validation-for="InviteeEmail" class="error"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="InviteeFirstName" class="text-sm font-bold"></label>
        <input asp-for="InviteeFirstName" />
        <span asp-validation-for="InviteeFirstName" class="error"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="InviteeLastName" class="text-sm font-bold"></label>
        <input asp-for="InviteeLastName" />
        <span asp-validation-for="InviteeLastName" class="error"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Role" class="text-sm font-bold"></label>
        <select asp-for="Role" asp-items="ViewBag.Roles"></select>
        <span asp-validation-for="Role" class="error"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="ProjectId" class="text-sm font-bold"></label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="w-full max-w-full overflow-auto">
            <option selected disabled hidden>Select Project</option>
        </select>
        <span asp-validation-for="ProjectId" class="error"></span>
    </div>

    <div class="flex flex-col gap-2 text-sm">
        <label asp-for="Message" class="text-sm font-bold"></label>
        <textarea data-tinymce rows="5" asp-for="Message">We want you to join our team!</textarea>
        <span asp-validation-for="Message" class="error"></span>
    </div>

    <div class="flex justify-end">
        <input type="submit" value="Invite"
            class="px-4 py-2 rounded-md cursor-pointer bg-success font-lato text-sm hover:bg-opacity-80 transition-opacity" />
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: '[data-tinymce]',
            menubar: false,
            statusbar: false,
            toolbar: 'undo redo | bold italic underline',
            height: 200
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
